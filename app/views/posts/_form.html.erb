<%= form_for @post do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h3>エラーがあります、チェックしてください。</h3>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= form.text_area :text, cols: 45, rows: 15 %></p>
  <p><%= form.submit :'登録する'%></p>
<% end %>
